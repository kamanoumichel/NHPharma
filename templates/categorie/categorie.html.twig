{% extends 'base.html.twig' %}
{% block title %}Nos Catégories{% endblock %}
{% block body %}
{{parent()}}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="jumbotron text-center">
                <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="{{asset('assets/images/categorie1.jpg')}}" class="d-block w-100" alt="..." height="550">
                            <div class="carousel-caption">
                                <h3 class="text-dark">Veuillez choisir une Sous Catégorie svp !!!</h3>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="{{asset('assets/images/categorie2.jpg')}}" class="d-block w-100" alt="..." height="550">
                            <div class="carousel-caption">
                                <h3 class="text-dark">Veuillez choisir une Sous Catégorie svp !!!</h3>
                            </div>
                        </div>
                            <div class="carousel-item">
                                <img src="{{asset('assets/images/categorie3.png')}}" class="d-block w-100" alt="..." height="550">
                                <div class="carousel-caption">
                                    <h3 class="text-dark">Veuillez choisir une Sous Catégorie svp !!!</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="container mt-5">
            <ul class="nav nav-pills mb-3 custom-pill" id="pills-tab" role="tablist">
                {% for item in categories %}
                    {% if item.parent == null %}
                        <li class="nav-item mt-2">
                            <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-{{item.categoryorders}}" role="tab" aria-controls="pills-profile" aria-selected="true">
                            {{ item.nomCat}}</a>
                        </li> 
                    {% endif %}    
                {% endfor %}  
            </ul>
            <div class="tab-content" id="pills-tabContent">   
                {% for item in categories %} 
                    {% if item.parent == null %} 
                    <div class="tab-pane fade" id="pills-{{item.categoryorders}}" role="tabpanel" aria-labelledby="pills-profile-tab">    
                        <table class="table custom-table">  
                            <tbody>
                                {% for z in categories %}
                                    {% if z.parent == item.nomCat %}
                                        <tr>
                                            <td> <a href="{{ path('categories_list',{ slug: z.slug}) }}" class="text-decoration:none;">{{ z.nomCat}}</a></td>
                  
                                        </tr>
                                    {% endif %}
                                {% endfor %}
             
                            </tbody>
                        </table>
                    </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>

    </div>
 </div>
{% endblock %}