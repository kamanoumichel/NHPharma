{% extends "base.html.twig" %}

{% block body %}
{{ parent() }}
<div class="site-wrap">
    <div class="bg-light py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-12 mb-0"> 
                    <h1 class="text-black">Detail du produit {{produits.nompro}}</h1></div>
                </div>
            </div>
        </div>
        <div class="site-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-5 mr-auto">
                        <div class="border text-center">
                            <img src="/uploads/attachments/{{produits.attachment}}" alt="Image" class="img-fluid p-1">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h2 class="text-black">{{produits.nompro}}</h2>
                        <p>{{produits.detail}}</p>
                        <p><strong class="text-primary h4">{{produits.prix}} XAF</strong></p>
                       
                        <a href="{{path('cart_add',{id: produits.id})}}" class="buy-now btn btn-sm height-auto px-4 py-3 btn-success">Ajouter au panier</a>
                        <a href="{{path('app_pharmacie_index')}}" class="buy-now btn btn-sm height-auto px-4 py-3 btn-primary">Continuer mes Achats</a>
                    </div>
                    <div class="mt-5">
                        <div class="tab-content" id="pills-tabContent">
                            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                                <table class="table custom-table">
                                    <thead>
                                        <th>Catégorie</th>
                                        <th>status</th>
                                        <th>date d'ajout</th>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <th scope="row">{{produits.souscategorie}}</th>
                                            {% if produits.stock == 0 %}
                                                <td class="text-danger">Stock épuisé</td>
                                            {% else %}
                                                <td class="text-success">En stock</td>
                                            {% endif %}
                                            
                                            <td>{{produits.dateper|date("d/m/Y h:m")}}</td>
                                        </tr>                     
                                    </tbody>
                                </table>
                            </div>            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
</div>
{% endblock %}